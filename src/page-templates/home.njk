{% extends "layout.njk" %}

{% block content %}
    {% for post in posts %}
        <div class="post">
          <h2><a href="{{ post.link }}">{{ post.title }}</a></h2>
          <p class="date">{{ post.date }}</p>

          {% if post.imagePreview %}
            <img class="blog-thumbnail" src="images/{{ post.imagePreview }}">
          {% endif %}

          {{ post.article }}
        </div>
    {% endfor %}
{% endblock %}
